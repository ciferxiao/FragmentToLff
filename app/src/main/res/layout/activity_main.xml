<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cifer.fragmenttolff.MainActivity">

    <android.support.v4.view.ViewPager
       android:id="@+id/viewpage"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#f5f5f5"
       android:splitMotionEvents="false"
       android:layout_above="@+id/division_bottom"
       >
       
       
   </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@id/division_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="1dp"
        android:checkedButton="@+id/main_content"
        android:paddingBottom="2dp"

        android:layout_alignParentBottom="true">
        <RadioButton
            android:id="@+id/main_content"
            style="@style/MainBottomRadio"
            android:textSize="15sp"
            android:text="主页"/>
        <RadioButton
            android:id="@+id/course_content"
            style="@style/MainBottomRadio"
            android:text="课程"
            android:textSize="15sp"
            />
        <RadioButton
            android:id="@+id/note_content"
            style="@style/MainBottomRadio"
            android:textSize="15sp"
            android:text="笔记"/>
        <RadioButton
            android:id="@+id/my_content"
            style="@style/MainBottomRadio"
            android:textSize="15sp"
            android:text="我的"/>
    </RadioGroup>
</RelativeLayout>
